generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  telegramId Int      @id  @map("telegram_id")
  acceptedDisclaimer Boolean @default(false) @map("accepted_disclaimer")
  language Language @default(ENGLISH) @map("language")
  createdAt DateTime @default(now()) @map("created_at")

  messages Message[]

  @@map("telegram_users")
}

enum MessageRole {
  SYSTEM    @map("system")
  USER      @map("user")
  ASSISTANT @map("assistant")
}

enum Language {
  ENGLISH @map("en")
  RUSSIAN @map("ru")
  POLISH  @map("pl")
}

model Message {
  id        Int      @id @default(autoincrement())
  telegramUserId    Int      @map("telegram_user_id")
  content      String
  role      MessageRole
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [telegramUserId], references: [telegramId], onDelete: Cascade)

  @@index([telegramUserId])
  @@map("messages")
}
