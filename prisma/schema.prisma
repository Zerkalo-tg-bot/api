generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  telegramUserId    Int      @map("telegram_user_id")
  content      String
  role      String
  createdAt DateTime @default(now()) @map("created_at")


  @@index([telegramUserId])
  @@map("messages")
}