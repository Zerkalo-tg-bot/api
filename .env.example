# Server
# Optional. Defaults to 3000.
PORT=3000

# Database (required)
# Example: postgresql://postgres:postgres@localhost:5432/zerkalo
DATABASE_URL=postgresql://postgres:postgres@db:5432/zerkalo

# OpenAI (required)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Optional. Defaults to "gpt-4" in code.
OPENAI_MODEL=gpt-5-nano

# Prompts (required)
# Public Google Docs document id that contains the system prompt / bot behavior.
BOT_PROMPT_DOCUMENT_ID=YOUR_GOOGLE_DOCS_DOCUMENT_ID

